<controls:CustomListUserControlBase x:Class="PeakboardExtensionGraph.AppOnly.GraphAppOnlyUiControl"
                                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                    xmlns:local="clr-namespace:PeakboardExtensionGraph"
                                    xmlns:controls="clr-namespace:Peakboard.ExtensionKit;assembly=Peakboard.ExtensionKit"
                                    mc:Ignorable="d" Background="#F5F5F6">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180" />
            <ColumnDefinition Width="350" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <!-- Client ID -->
        <TextBlock Grid.Column="0" Grid.Row="0" Text="Client ID" Margin="3"/>
        <TextBox Grid.Column="1" Grid.Row="0" Name="ClientId" Text="067207ed-41a4-4402-b97f-b977babe0ec9" VerticalContentAlignment="Center" Margin="3"/>
        <!-- Tenant ID -->
        <TextBlock Grid.Column="0" Grid.Row="1" Text="Tenant ID" Margin="3"/>
        <TextBox Grid.Column="1" Grid.Row="1" Name="TenantId" Text="b4ff9807-402f-42b8-a89d-428363c55de7" VerticalContentAlignment="Center" Margin="3"/>
        <!-- Client Secret -->
        <TextBlock Grid.Column="0" Grid.Row="2" Text="ClientSecret" Margin="3"/>
        <TextBox Grid.Column="1" Grid.Row="2" Name="Secret" Text="vDr8Q~.W7_~OUzxIAOIGCO~T9_nQvotrkz6IsaDd" VerticalContentAlignment="Center" Margin="3"/>
        <!-- Connect Button -->
        <Button Grid.Column="1" Grid.Row="3" Name="ConnectButton" Content="Connect" Margin="3,3,3,10" HorizontalAlignment="Right" Width="130" Click="ConnectButton_Click"></Button>
        <!-- Request Data -->
        <TextBlock Grid.Column="0" Grid.Row="4" Text="Request Data" Margin="3"/>
        <ComboBox Grid.Column="1" Grid.Row="4" IsEnabled="False" VerticalContentAlignment="Center" Name="RequestBox" Margin="3,3,3,3" SelectionChanged="RequestBox_SelectionChanged"></ComboBox>
        <!-- Add Entity -->
        <TextBlock Grid.Column="0" Grid.Row="5" Text="Add entity" Margin="3"/>
        <TextBox Grid.Column="1" Grid.Row="5" Name="CustomEntityText" IsEnabled="False" HorizontalAlignment="Left" VerticalContentAlignment="Center" Margin="3" Width="290">
            <TextBox.ToolTip>
                <StackPanel>
                    <TextBlock FontWeight="Bold" FontSize="14" Margin="0,0,0,5">Add entity</TextBlock>
                    <TextBlock>
                        Add a custom entity to the
                        <LineBreak />
                        request data dropdown menu.
                    </TextBlock>
                    <Border BorderBrush="Silver" BorderThickness="0,1,0,0" Margin="0,8" />
                    <TextBlock FontStyle="Italic">Example input: Events /events</TextBlock>
                </StackPanel>
            </TextBox.ToolTip>
        </TextBox>
        <Button Grid.Column="1" Grid.Row="5" Name="CustomEntityButton" IsEnabled="False" HorizontalAlignment="Right" Content="Add" Width="50" Margin="3" Click="CustomEntityButton_OnClick"/>

        <!-- Select & Order by Tabs -->
        <TabControl Grid.Column="1" Grid.Row="6" Margin="3">
            <TabItem Header="Select">
                <ListBox Height="100" SelectionMode="Multiple" Name="SelectList"></ListBox>
            </TabItem>
            <TabItem Header="Order by">
                <ListBox Height="100" SelectionMode="Multiple" Name="OrderList"></ListBox>
            </TabItem>
        </TabControl>
        <!-- Desc / Asc -->
        <TextBlock Grid.Column="1" Grid.Row="7" Text="sorting" HorizontalAlignment="Right" Margin="3 4 70 3"/>
        <ComboBox Grid.Column="1" Grid.Row="7" Name="OrderByMode" IsEnabled="False" Margin="3 3 3 10" HorizontalAlignment="Right" Width="60">
            <ComboBoxItem Content="Desc" IsSelected="True"></ComboBoxItem>
            <ComboBoxItem Content="Asc" IsSelected="False"></ComboBoxItem>
        </ComboBox>
        <!-- Filter -->
        <TextBlock Grid.Column="0" Grid.Row="8" Text="Filter" Margin="3"/>
        <TextBox Grid.Column="1" Grid.Row="8" Name="Filter" IsEnabled="False" HorizontalAlignment="Left" VerticalContentAlignment="Center" Width="270" Margin="3 3 3 3"></TextBox>
        <TextBlock Grid.Column="1" Grid.Row="8" Text="Eventual" HorizontalAlignment="Center" Margin="260 3 3 3"></TextBlock>
        <CheckBox Grid.Column="1" Grid.Row="8" Name="ConsistencyBox" HorizontalAlignment="Right" IsEnabled="False" Margin="3 4 3 3"></CheckBox>
        <!-- Top --> 
        <TextBlock Grid.Column="1" Grid.Row="9" Text="Top" HorizontalAlignment="Left" Margin="3"/>
        <TextBox Grid.Column="1" Grid.Row="9" Name="Top" IsEnabled="False" HorizontalAlignment="Left" Width="130" Text="" VerticalContentAlignment="Center" Margin="30 3 3 3"/>
        <!-- Skip -->
        <TextBlock Grid.Column="1" Grid.Row="9" Text="Skip" HorizontalAlignment="Center" Margin="50 3 3 3"/>
        <TextBox Grid.Column="1" Grid.Row="9" Name="Skip" IsEnabled="False" HorizontalAlignment="Right" Width="130" Text="" VerticalContentAlignment="Center" Margin="3 3 3 3"/>
        <!-- Custom Call -->
        <Border Grid.Column="1" Grid.Row="10" BorderBrush="Silver" BorderThickness="0,1,0,0" Margin="0 3 3 3" />
        <TextBlock Grid.Column="0" Grid.Row="11" HorizontalAlignment="Left" Text="Custom Call" Margin="3"/>
        <CheckBox Grid.Column="0" Grid.Row="11" IsEnabled="False" Name="CustomCallCheckBox"  HorizontalAlignment="Center" Margin="-20 4 3 3" Click="CustomCallCheckBox_Click"/>
        <TextBox Grid.Column="1" Grid.Row="11" IsEnabled="False" Name="CustomCallTextBox" Text="" Width="290" HorizontalAlignment="Left" VerticalContentAlignment="Center" Margin="3 3 3 3"></TextBox>
        <Button Grid.Column="1" Grid.Row="11" IsEnabled="False" Name="CustomCallCheckButton" Content="Check" Width="50" HorizontalAlignment="Right" Margin="3" Click="CustomCallCheckButton_Click"></Button>
    </Grid>
</controls:CustomListUserControlBase>