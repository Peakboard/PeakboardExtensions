    </PackageReference>

    </ItemGroup>

    <ItemGroup>
      <None Update="Extension.xml">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
      <None Update="WermaUtilities\DevExpress.Utils.v18.2.dll">
